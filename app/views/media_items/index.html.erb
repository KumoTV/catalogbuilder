<p id="notice"><%= notice %></p>

<h1>Listing Media Items</h1>

<table>
  <thead>
    <tr>
      <th>Media item name</th>
      <th>Origin s3 url</th>
      <th>Destination s3 url</th>
      <th>Encoding profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media_items.each do |media_item| %>
      <tr>
        <td><%= media_item.media_item_name %></td>
        <td><%= media_item.origin_s3_url %></td>
        <td><%= media_item.destination_s3_url %></td>
        <td><%= media_item.encoding_profile %></td>
        <td><%= link_to 'Show', media_item %></td>
        <td><%= link_to 'Edit', edit_media_item_path(media_item) %></td>
        <td><%= link_to 'Destroy', media_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

